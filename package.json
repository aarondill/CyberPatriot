{
	"name": "cyberpatriot",
	"version": "0.0.0",
	"description": "Scripts for CyberPatriot",
	"repository": "https://github.com/aarondill/CyberPatriot",
	"private": true,
	"license": "MIT",
	"author": "aarondill <aaronsacks2006@gmail.com>",
	"main": "dist/run.js",
	"type": "module",
	"files": [
		"dist"
	],
	"scripts": {
		"setup": "./setup.sh",
		"start": "./yarpm.js run build && node ./dist/run.js",
		"build": "./yarpm.js run tsc:build",
		"clean": "rimraf dist",
		"lint": "./yarpm.js run lint:eslint && yarpm run lint:prettier && yarpm run sort-package",
		"lint:eslint": "eslint . --fix --ext .js,.ts,.mjs,.mts,.cjs,.cts,.tsx,.jsx",
		"lint:prettier": "prettier . --write --loglevel warn",
		"prepublishOnly": "./yarpm.js run build",
		"release": "./yarpm.js run lint && yarpm run release:release-it",
		"release:release-it": "release-it",
		"sort-package": "sort-package-json",
		"test": "./yarpm.js run test:typecheck && yarpm run lint",
		"test:typecheck": "tsc -p ./tsconfig.eslint.json --noEmit --skipLibCheck",
		"tsc:build": "./yarpm.js run clean && tsc --build",
		"tsc:watch": "./yarpm.js run clean && tsc --watch",
		"watch": "./yarpm.js run lint && yarpm run tsc:watch"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^2.1.3",
		"@types/node": "^20.9.0",
		"@typescript-eslint/eslint-plugin": "^6.11.0",
		"@typescript-eslint/parser": "^6.11.0",
		"eslint": "^8.53.0",
		"prettier": "^3.1.0",
		"release-it": "^17.0.0",
		"rimraf": "^5.0.5",
		"sort-package-json": "^2.6.0",
		"typescript": "^5.2.2"
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"zx": "^7.2.3",
		"n": "^9.2.0"
	}
}
